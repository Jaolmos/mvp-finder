# ===========================================
# CONFIGURACIÓN REDDIT MVP FINDER
# ===========================================
# Copiar este archivo a .env y configurar los valores
# cp .env.example .env

# -------------------------------------------
# DJANGO
# -------------------------------------------
# Desarrollo: config.settings.local
# Producción: config.settings.production
DJANGO_SETTINGS_MODULE=config.settings.local

# Cambiar en producción por una clave segura (generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# -------------------------------------------
# POSTGRESQL
# -------------------------------------------
POSTGRES_DB=reddit_mvp_finder
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# En Docker el host es 'postgres' (nombre del servicio)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------------------------------
# REDIS
# -------------------------------------------
# En Docker el host es 'redis' (nombre del servicio)
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -------------------------------------------
# REDDIT API
# -------------------------------------------
# Obtener credenciales en: https://www.reddit.com/prefs/apps
# Crear una app tipo "script" para uso personal
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USER_AGENT=RedditMVPFinder/1.0

# -------------------------------------------
# OLLAMA (Análisis IA)
# -------------------------------------------
# En Docker usar host.docker.internal para acceder al host
OLLAMA_HOST=http://host.docker.internal:11434

