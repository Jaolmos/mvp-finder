# ===========================================
# MVP FINDER - DESARROLLO LOCAL
# ===========================================
# Copiar este archivo a .env y configurar los valores:
#   cp .env.example .env
#
# Este archivo es para DESARROLLO local con Docker Compose

# -------------------------------------------
# DJANGO
# -------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=dev-secret-key-change-me

# -------------------------------------------
# POSTGRESQL
# -------------------------------------------
POSTGRES_DB=mvp_finder
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------------------------------
# REDIS
# -------------------------------------------
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -------------------------------------------
# PRODUCT HUNT API
# -------------------------------------------
# Obtener credenciales en: https://www.producthunt.com/v2/oauth/applications
PRODUCT_HUNT_API_KEY=your-api-key-here
PRODUCT_HUNT_API_SECRET=your-api-secret-here

# -------------------------------------------
# OLLAMA (IA)
# -------------------------------------------
# En Docker Compose el host es 'ollama' (nombre del servicio)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=qwen2.5:3b
